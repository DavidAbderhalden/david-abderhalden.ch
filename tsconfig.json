{
    "include": ["src/**/*.tsx", "scripts/**/*.tsx", "typings"],
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "Node",
      "target": "esnext",
      "jsx": "react",
      "lib": ["dom", "esnext"],
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noUnusedLocals": false,
      "allowJs": true,
      "baseUrl": "./src",
    },
    "exclude": ["node_modules", "public", ".cache"],
    "paths": {
        "styles": ["styles"],
        "components": ["components"],
        "assets": ["assets"],
        "pages": ["pages"],
    }
  }